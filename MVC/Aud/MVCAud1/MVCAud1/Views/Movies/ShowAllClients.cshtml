@model List<MVCAud1.Models.Client>
@{
    ViewBag.Title = "ShowAllClients";
}

<h2>ShowAllClients</h2>

<ul>
    @{ 
        int i = 0;
        foreach(var c in Model)
        {
            <li>
                @Html.ActionLink(c.name, "ShowClient", new { id = i })
                @Html.ActionLink("Edit", "EditClient", new { id = i })
                @Html.ActionLink("Delete", "DeleteClient", new { id = i })
            </li>
            i++;
        }
    }
</ul>