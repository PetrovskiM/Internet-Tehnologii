@model MVCAud1.Models.MovieRentals
@{
    ViewBag.Title = "ShowMovies";
}

<h2>Movie:@Model.movie.name</h2>
<h3>Rating:@Model.movie.rating </h3>
<h3>Download here:<a href="@Model.movie.downloadUrl">here</a></h3>
<h3>Clients</h3>
<ul>
    @{ 
        int i = 0;
        foreach(var customer in Model.customers)
        {
            <li>@Html.ActionLink(customer.name, "ShowClient", new { id = i })</li>
            i++;
        }
    }
</ul>

