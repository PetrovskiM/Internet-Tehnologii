@model MVCAud1.Models.Movie
@{
    /**/

    ViewBag.Title = "NewMovie";
}

<h2>Add a new movie</h2>
@using (Html.BeginForm("InsertNewMovie", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.name)
        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.rating)
        @Html.TextBoxFor(m => m.rating, new { @class = "form-control", type="number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.downloadUrl)
        @Html.TextBoxFor(m => m.downloadUrl, new { @class = "form-control" })
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
}

